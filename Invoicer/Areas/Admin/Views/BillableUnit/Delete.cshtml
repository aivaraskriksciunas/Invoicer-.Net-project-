@model Invoicer.Core.Data.Models.BillableUnit

<div>
    <div class="card mt-4">
        <div class="card-body">
            <h5 class="card-title">
                Deleting @Model.FullName (@Model.ShortName)
            </h5>
            <p>Are you sure you want to delete this unit? This action is irreversible.</p>

            <div class="d-flex">
                <form asp-action="DeleteConfirm" asp-route-id="@Model.Id" method="post">
                    <input type="submit" class="btn btn-danger" value="Yes, delete" />
                </form>
                <a class="card-link" asp-action="Index">No, go back</a>
            </div>
        </div>
    </div>
</div>

